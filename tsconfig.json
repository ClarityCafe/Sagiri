{
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "lib/",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*"]
}
